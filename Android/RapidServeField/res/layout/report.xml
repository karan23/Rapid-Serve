<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cards_listview_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Totol Jobs :"
        android:layout_margin="15dp"
        android:textColor="#2a2a2a"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/totaljob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_margin="16dp"
        android:textStyle="italic"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="InProgress Jobs :"
        android:layout_margin="15dp"
        android:textColor="#2a2a2a"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:ignore="DuplicateIds" />

    <TextView
        android:id="@+id/inprogressJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="italic"
        android:layout_margin="16dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Completed Jobs : "
        android:layout_margin="15dp"
        android:textColor="#2a2a2a"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:ignore="DuplicateIds" />

    <TextView
        android:id="@+id/compleatedJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="italic"
        android:layout_margin="16dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Distance travelled : "
        android:layout_margin="15dp"
        android:textColor="#2a2a2a"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:ignore="DuplicateIds" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" 
        android:textStyle="italic"
        android:layout_margin="16dp"/>

</LinearLayout>