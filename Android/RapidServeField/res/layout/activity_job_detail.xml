<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/activity_background"
    >
   <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true" >
    </LinearLayout> 
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Name"
        android:layout_margin="2dp"
        android:textColor="#2a2a2a"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/custname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="italic"
        android:layout_margin="2dp" />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:layout_marginTop="2dp"
        android:layout_margin="2dp"
        android:textColor="#2a2a2a"
        android:textAppearance="?android:attr/textAppearanceMedium" tools:ignore="DuplicateIds"/>

    <TextView
        android:id="@+id/custAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="italic"
        android:layout_margin="2dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginTop="10dp"
            android:text="Complaint Type"
            android:textColor="#2a2a2a"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="DuplicateIds" />

    <TextView
        android:id="@+id/comptype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="italic"
        android:layout_margin="2dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginTop="5dp"
            android:text="Description"
            android:textColor="#2a2a2a"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="DuplicateIds" />

<ScrollView 
    android:layout_width="match_parent"
            android:layout_marginTop="5dp"
    android:layout_height="100dp">
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/compDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="italic"
        android:layout_margin="2dp" />
    </LinearLayout>
    
</ScrollView>

<EditText
    android:id="@+id/satisCodes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:ems="10"
    android:hint="Enter Satisfection code" >
</EditText>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="horizontal"
    android:padding="5dp"
    android:weightSum="3" >

    <ImageButton
        android:id="@+id/call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4.5dp"
        android:layout_weight="1"
        android:background="@drawable/call"
        android:scaleType="center"
        android:text="Call" />

    <ImageButton
        android:id="@+id/getdir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Direction"
        android:layout_margin="4.5dp"
        android:background="@drawable/map" />

    <ImageButton 
        android:layout_width="wrap_content"
        android:id="@+id/reslove"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Resolve"
        android:layout_margin="4.5dp"
        android:background="@drawable/resolve"/>
</LinearLayout>
</LinearLayout>

