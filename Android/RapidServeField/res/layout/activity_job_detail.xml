<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    >
   <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true" >
    </LinearLayout> 
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/custname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
                android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/custAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />
        <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complaint Type"
                android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/comptype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />
        <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

<ScrollView 
    android:layout_width="match_parent"
            android:layout_marginTop="5dp"
    android:layout_height="100dp">
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/compDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />
    </LinearLayout>
    
</ScrollView>

<EditText 
    android:id="@+id/satisCode"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter Satisfection code"/>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="15" android:orientation="horizontal"
    android:padding="5dp">
    <Button android:layout_width="0dp"
        android:id="@+id/call"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="Call"/>

    <Button
        android:id="@+id/getdir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="Direction" />

                <Button android:layout_width="0dp"
            android:id="@+id/reslove"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="Resolve"/>
</LinearLayout>
</LinearLayout>

